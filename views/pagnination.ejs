<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>pagination</title>
</head>
<body>
    <table border="2">
        <tr>
            <th>Name</th>
            <th>Email</th>
        </tr>
        <% record.forEach(function(p){ %>
        <tr>
            <td><%=p.Name%></td>
            <td><%=p.Email%></td>
        </tr>

        <% }) %>
    </table>
    <div>
        <div>
            <% if(pages > 0){ %>
                <ul>
                    <% if(current > pages){ %>
                        <li>
                            <a href="/<%= parseInt(current) %>">
                            </a>
                        </li>
                    <% } %>
                    <% if(current == 1){ %>
                        <li>
                            <a href="">

                            </a>
                        </li>
                    <% } else { %>
                        <li>
                            <a href="/1"></a>
                        </li>
                    <% } %>
                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                    <% if(i !== 1) { %>
                        <li>
                            <a>.....</a>
                        </li>
                    <% } %>
                    <% for(; i<=(Number(current) + 4) && i<=pages; i++) {%>
                        <% if(i == current) { %>
                            <li><a href=""><%= i %></a></li>
                        <% } else { %>
                            <li><a href="<%= i %>"><%= i %></a></li>
                        <% } %>
                        <% if(i==Number(current) + 4 && i < pages) { %>
                            <li>
                                <a>.....</a>
                            </li>
                        <% } %>
                    <% } %>
                    <% if(current == pages) { %>
                        <li>
                            <a>Last</a>
                        </li>
                    <% } else { %>
                        <li><a href="/<%=pages%>">Last</a></li>
                    <% } %>
                </ul>
            <% } %>
        </div>
    </div>
</body>
</html>